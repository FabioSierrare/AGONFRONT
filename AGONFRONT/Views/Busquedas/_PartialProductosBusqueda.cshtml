
<div class="col-9 d-flex flex-column gap-3" id="data-categoria">
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No hay productos que coincidan con los filtros seleccionados.</div>
    }
    else
    {
        foreach (var producto in Model)
        {
            <div class="d-flex align-items-center bg-white p-3 rounded shadow-sm producto"
                 data-categoria="@producto.Categoria"
                 data-precio="@producto.PrecioConDescuento">
                <!-- Asegúrate de que 'Ubicacion' esté en tu modelo -->
                <div class="col-3 flex-shrink-0">
                    <img src="@producto.UrlImagen" class="img-fluid rounded" alt="@producto.NombreProducto" style="max-height: 100px; object-fit: cover;">
                </div>
                <div class="col-8 ms-3">
                    <h6 class="text-uppercase fw-bold mb-2">@producto.Categoria</h6>
                    <p class="mb-2">@producto.NombreProducto</p>

                    @if (producto.Precio != producto.PrecioConDescuento)
                    {
                        <p class="text-muted text-decoration-line-through mb-2">$@producto.Precio</p>
                    }

                    <h4 class="text-success fw-bold mb-2">
                        $@producto.PrecioConDescuento
                        @if (producto.Precio != producto.PrecioConDescuento)
                        {
                            <span class="text-success fs-6">@producto.Descuento% OFF</span>
                        }
                    </h4>
                </div>
            </div>
        }
    }
</div>
