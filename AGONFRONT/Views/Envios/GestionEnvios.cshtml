@model List<dynamic>

@{
    ViewBag.Title = "GestionEnvios";
    Layout = "~/Views/Shared/_LayoutGestionVendedor.cshtml";
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Content/css/GestionProductos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="container-fluid p-0">
        <main class="mt-4">
            <h1>Gestión de Envíos</h1>
            <p>Visualiza el estado de los envíos y configura las políticas de envío.</p>

            <section class="mt-4">
                <h3>Estado de los Envíos</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Pedido</th>
                            <th>Cliente</th>
                            <th>Empresa de Transporte</th>
                            <th>Tracking</th>
                            <th>Estado</th>
                            <th>Fecha de Envío</th>
                            <th>Fecha de Entrega</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var envio in Model)
                        {
                            <tr>
                                <td>@envio.iD_Pedido</td>
                                <td>@envio.cliente</td>
                                <td>@envio.empresa_Transporte</td>
                                <td><a href="#">@envio.tracking</a></td>
                                <td><span class="badge bg-info">@envio.estado_Del_Envio</span></td>
                                <td>@(envio.fechaEnvio != null ? Convert.ToDateTime(envio.FechaEnvio).ToString("yyyy-MM-dd HH:mm:ss") : "Sin fecha")</td>
                                <td>@(envio.fechaEntrega != null ? Convert.ToDateTime(envio.FechaEntrega).ToString("yyyy-MM-dd HH:mm:ss") : "Sin fecha")</td>
                                <td><button class="btn btn-primary btn-sm" onclick="viewShipmentDetails(@envio.IdPedido)">Ver</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
