
@{
    ViewBag.Title = "EstadisticasVentas";
    Layout = "~/Views/Shared/_LayoutGestionVendedor.cshtml";
}
@using System.Text.Json
@model AGONFRONT.Models.Estadisticasx

<main class="main-content">
    <header>
        <div class="header-left">
            <h1>Estadísticas de Ventas</h1>
            <p>Gráficos y reportes detallados del rendimiento de ventas.</p>
        </div>
    </header>

    <!-- Gráficos y estadísticas -->
    <section class="sales-stats">
        <div class="chart">
            <h3>Rendimiento de Ventas (Mensual)</h3>
            <canvas id="salesPerformanceChart"></canvas>
        </div>
        <div class="chart">
            <h3>Productos Más Vendidos</h3>
            <canvas id="topSellingProductsChart"></canvas>
        </div>
    </section>

    <!-- Reportes de ventas -->
    <section class="sales-report">
        <h3>Reporte de Ventas</h3>
        <table>
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Producto</th>
                    <th>Cantidad Vendida</th>
                    <th>Ingresos Generados</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </section>

    <!-- Historial de auditoría -->
    <section class="audit-report">
        <h3>Historial de Auditoría</h3>
        <table>
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Acción</th>
                    <th>Usuario</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </section>
</main>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Pasar datos del modelo de Razor a JavaScript
        let VentasPorSemana = @Html.Raw(JsonSerializer.Serialize(Model.VentasPorSemana));
        let ProductoMasVendido = @Html.Raw(JsonSerializer.Serialize(Model.ProductosMasVendidos));
        console.log(VentasPorSemana.año)
    </script>

    <script src="~/Content/JS/EstadisticaVenta.js"></script> <!-- Tu archivo JS -->
}



}
@section Styles {
    <link rel="stylesheet" href="~/Content/css/EstadisticaVenta.css" />
    <style>
        .chart {
            width: 100%;
            max-width: 600px;
            margin: auto;
        }
    </style>
}

