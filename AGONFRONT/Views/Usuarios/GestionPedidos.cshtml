    @using AGONFRONT.Models
    @model List<Pedidos>

    @{
        ViewBag.Title = "Gestión de Pedidos";
        Layout = "~/Views/Shared/_LayoutGestionVendedor.cshtml";
        var clientes = ViewBag.Clientes as List<Usuarios>;
        var productos = ViewBag.Productos as List<Productos>;
    }

    <!-- Order Details Modal -->

    <head>
        <style>
            /* Main content */
            .main-content {
                margin-left:120px;
                padding: 2rem;
                transition: var(--transition);
                width:auto;
            }

            .page-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 2rem;
            }

            .page-title {
                font-family: 'Merriweather', serif;
                font-weight: 700;
                color: var(--primary-dark);
                font-size: 2rem;
            }

            .page-subtitle {
                color: var(--dark);
                opacity: 0.8;
                font-size: 1rem;
                margin-top: 0.5rem;
            }

            /* Card styles */
            .card {
                border: none;
                border-radius: 12px;
                box-shadow: var(--shadow-sm);
                transition: var(--transition);
                margin-bottom: 1.5rem;
                overflow: hidden;
            }

                .card:hover {
                    transform: translateY(-5px);
                    box-shadow: var(--shadow-md);
                }

            .card-header {
                background: white;
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
                padding: 1.25rem 1.5rem;
                font-weight: 600;
            }

            .card-body {
                padding: 1.5rem;
            }

            /* Table styles */
            .table {
                width: 100%;
                border-collapse: separate;
                border-spacing: 0;
            }

                .table thead th {
                    background-color: var(--primary);
                    color: white;
                    border: none;
                    padding: 1rem;
                    font-weight: 500;
                    text-transform: uppercase;
                    font-size: 0.8rem;
                    letter-spacing: 0.5px;
                }

                .table tbody tr {
                    transition: var(--transition);
                }

                    .table tbody tr:hover {
                        background-color: rgba(39, 174, 96, 0.05);
                    }

                .table td {
                    padding: 1rem;
                    vertical-align: middle;
                    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
                }

            /* Status badges */
            .badge {
                padding: 0.5rem 0.75rem;
                border-radius: 8px;
                font-weight: 500;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .badge-primary {
                background-color: rgba(39, 174, 96, 0.1);
                color: var(--primary-dark);
            }

            .badge-warning {
                background-color: rgba(242, 201, 76, 0.1);
                color: #b38f00;
            }

            .badge-success {
                background-color: rgba(39, 174, 96, 0.1);
                color: var(--primary-dark);
            }

            .badge-danger {
                background-color: rgba(235, 87, 87, 0.1);
                color: #d63031;
            }

            /* Buttons */
            .btn {
                border-radius: 8px;
                padding: 0.5rem 1rem;
                font-weight: 500;
                transition: var(--transition);
                border: none;
            }

            .btn-primary {
                background: linear-gradient(135deg, var(--primary), var(--secondary));
                color: white;
                box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
            }

                .btn-primary:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 8px 20px rgba(39, 174, 96, 0.4);
                    color: white;
                }

            .btn-outline-primary {
                border: 1px solid var(--primary);
                color: var(--primary);
                background: transparent;
            }

                .btn-outline-primary:hover {
                    background: var(--primary);
                    color: white;
                }

            .btn-sm {
                padding: 0.375rem 0.75rem;
                font-size: 0.8rem;
            }

            /* Select dropdown */
            .form-select {
                border-radius: 8px;
                padding: 0.5rem 1rem;
                border: 1px solid rgba(0, 0, 0, 0.1);
                transition: var(--transition);
            }

                .form-select:focus {
                    border-color: var(--primary-light);
                    box-shadow: 0 0 0 0.25rem rgba(39, 174, 96, 0.25);
                    outline: none;
                }

            /* Modal */
            .modal {
                display: none;
                position: fixed;
                z-index: 1050;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: hidden;
                background-color: rgba(0, 0, 0, 0.5);
                backdrop-filter: blur(5px);
            }

            .modal-content {
                background-color: white;
                margin: 5% auto;
                padding: 2rem;
                border-radius: 12px;
                box-shadow: var(--shadow-lg);
                width: 80%;
                max-width: 800px;
                max-height: 80vh;
                overflow-y: auto;
                animation: modalFadeIn 0.3s ease-out;
            }

            @@keyframes modalFadeIn {
                from {
                    opacity: 0;
                    transform: translateY(-20px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .modal-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            }

            .modal-title {
                font-family: 'Merriweather', serif;
                font-weight: 700;
                color: var(--primary-dark);
                font-size: 1.5rem;
            }

            .close-btn {
                font-size: 1.5rem;
                color: #777;
                cursor: pointer;
                transition: var(--transition);
            }

                .close-btn:hover {
                    color: var(--primary);
                    transform: rotate(90deg);
                }

            /* Order details */
            .order-detail-item {
                display: flex;
                margin-bottom: 1rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            }

            .order-detail-label {
                font-weight: 500;
                color: var(--dark);
                min-width: 150px;
            }

            .order-detail-value {
                color: #555;
            }

            .order-products {
                margin-top: 1.5rem;
            }

            .product-item {
                display: flex;
                align-items: center;
                padding: 1rem;
                background: rgba(0, 0, 0, 0.02);
                border-radius: 8px;
                margin-bottom: 0.75rem;
            }

            .product-image {
                width: 60px;
                height: 60px;
                border-radius: 8px;
                object-fit: cover;
                margin-right: 1rem;
            }

            .product-info {
                flex: 1;
            }

            .product-name {
                font-weight: 500;
                margin-bottom: 0.25rem;
            }

            .product-price {
                color: var(--primary-dark);
                font-weight: 600;
            }

            /* Notification badge */
            .notification-badge {
                position: absolute;
                top: -5px;
                right: -5px;
                background-color: #EB5757;
                color: white;
                border-radius: 50%;
                width: 20px;
                height: 20px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 0.7rem;
                font-weight: 600;
            }

            /* Responsive */
            @@media (max-width: 992px) {
                .sidebar {
                    transform: translateX(-100%);
                    width: 280px;
                }

                    .sidebar.active {
                        transform: translateX(0);
                    }

                .main-content {
                    margin-left: 0;
                }
            }

            @@media (max-width: 768px) {
                .table-responsive {
                    overflow-x: auto;
                    -webkit-overflow-scrolling: touch;
                }

                .modal-content {
                    width: 95%;
                    margin: 2% auto;
                }
            }
        </style>
    </head>
    <div class="main-content animate__animated animate__fadeIn">
        <div class="page-header">
            <div>
                <h1 class="page-title">Gestión de Pedidos</h1>
                <p class="page-subtitle">Revisa, actualiza y administra los pedidos de los clientes</p>
            </div>
            <div>
                <button class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i> Nuevo Pedido
                </button>
            </div>
        </div>

        <!-- Orders Card -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lista de Pedidos Recientes</h5>
                <div class="input-group" style="width: 250px;">
                    <input type="text" class="form-control" placeholder="Buscar pedidos...">
                    <button class="btn btn-outline-primary" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID Pedido</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var pedido in Model)
                            {
                                var clienteNombre = clientes?.FirstOrDefault(c => c.Id == pedido.ClienteId)?.Nombre ?? "Desconocido";
                                var productoNombre = productos?.FirstOrDefault(p => p.Id == pedido.ProductoId)?.Nombre ?? "Desconocido";
                                var Correo = clientes?.FirstOrDefault(c => c.Id == pedido.ClienteId)?.Correo ?? "Desconocido";
                                var telefono = clientes?.FirstOrDefault(c => c.Id == pedido.ClienteId)?.Telefono ?? "Desconocido";
                                <tr>
                                    <td>@pedido.Id</td>
                                    <td>@clienteNombre</td>
                                    <td>@productoNombre</td>
                                    <td>@(pedido.PrecioUnitario * pedido.Cantidad)</td>
                                    <td>@pedido.Estado</td>
                                    <td>@pedido.FechaPedido</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary"
                                                onclick="viewOrderDetails(@pedido.Id, '@clienteNombre', '@Correo', '@telefono', '@pedido.FechaPedido', '@pedido.Estado', '@pedido.MetodoPago', '@productoNombre', @pedido.Cantidad, @pedido.PrecioUnitario)">
                                            <i class="bi bi-eye me-1"></i> Ver
                                        </button>

                                    </td>
                                </tr>


                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Único Global -->
    <!-- Order Stats -->
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Pedidos Totales</h6>
                    <h3 class="mb-0">124</h3>
                    <span class="text-success small">+12% este mes</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-3">En Proceso</h6>
                    <h3 class="mb-0">28</h3>
                    <span class="text-warning small">+3 esta semana</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Enviados</h6>
                    <h3 class="mb-0">45</h3>
                    <span class="text-info small">+8% este mes</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Entregados</h6>
                    <h3 class="mb-0">51</h3>
                    <span class="text-success small">+15% este mes</span>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div id="orderDetailsModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Detalles del Pedido #<span id="order-id"></span></h3>
                <span class="close-btn" onclick="closeModal()">&times;</span>
            </div>
            <div id="order-details-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="order-detail-item">
                            <div class="order-detail-label">Cliente:</div>
                            <div class="order-detail-value" id="customer-name"></div>
                        </div>
                        <div class="order-detail-item">
                            <div class="order-detail-label">Email:</div>
                            <div class="order-detail-value" id="customer-email"></div>
                        </div>
                        <div class="order-detail-item">
                            <div class="order-detail-label">Teléfono:</div>
                            <div class="order-detail-value" id="customer-phone"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="order-detail-item">
                            <div class="order-detail-label">Fecha:</div>
                            <div class="order-detail-value" id="order-date"></div>
                        </div>
                        <div class="order-detail-item">
                            <div class="order-detail-label">Estado:</div>
                            <div class="order-detail-value" id="order-status-text"></div>
                        </div>
                        <div class="order-detail-item">
                            <div class="order-detail-label">Método de Pago:</div>
                            <div class="order-detail-value" id="payment-method"></div>
                        </div>
                    </div>
                </div>

                <div class="order-products mt-3">
                    <h5>Productos</h5>
                    <div class="product-item">
                        <img src="https://via.placeholder.com/60" alt="Producto" class="product-image">
                        <div class="product-info">
                            <div class="product-name"></div>
                            <div class="product-meta"></div>
                        </div>
                        <div class="product-price"></div>
                    </div>
                </div>

                <div class="order-summary mt-4">
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Total:</span>
                        <span></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-outline-primary" onclick="printOrder()">
                        <i class="bi bi-printer me-2"></i> Imprimir
                    </button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            function viewOrderDetails(id, nombre, correo, telefono, fecha, estado, metodoPago, producto, cantidad, precio) {
                document.getElementById('order-id').textContent = id;
                document.getElementById('customer-name').textContent = nombre;
                document.getElementById('customer-email').textContent = correo;
                document.getElementById('customer-phone').textContent = telefono;
                document.getElementById('order-date').textContent = fecha;
                document.getElementById('payment-method').textContent = metodoPago;
                document.querySelector('.product-name').textContent = producto;
                document.querySelector('.product-meta').textContent = `Cantidad: ${cantidad} | $${precio} c/u`;
                document.querySelector('.product-price').textContent = `$${(precio * cantidad)}`;
                document.querySelector('.order-summary span:last-child').textContent = `$${(precio * cantidad)}`;

                const modal = document.getElementById('orderDetailsModal');
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }

        </script>
        </section>
    }
    <!-- Bootstrap JS (requerido para que los modales funcionen) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>