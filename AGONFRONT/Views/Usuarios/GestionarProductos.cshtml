@model AGONFRONT.Models.GestionarProductos
@{
    ViewBag.Title = "GestionarProductos";
    Layout = "~/Views/Shared/_LayoutGestionVendedor.cshtml";
    var usuario = ViewBag.Usuario;
    var productos = ViewBag.Productos as List<dynamic>;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/GestionProductos.css" />
</head>
<div class="container mt-5">
    <h2>Gestionar Productos</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info">@TempData["Mensaje"]</div>
    }

    <div class="mb-3">
        <a asp-action="AgregarProducto" class="btn btn-success">Agregar Nuevo Producto</a>
    </div>

    @if (Model.Productos != null && Model.Productos.Any())
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model.Productos)
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Precio.ToString("C")</td>
                        <td>@producto.Stock</td>
                        <td>@Model.Categorias.FirstOrDefault(c => c.Id == producto.CategoriaId)?.Nombre</td>
                        <td>
                            @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                            {
                                <img src="@producto.ImagenUrl" alt="Imagen del producto" width="50" height="50" />
                            }
                        </td>
                        <td>
                            <a asp-action="EditarProducto" asp-route-id="@producto.Id" class="btn btn-warning btn-sm">Editar</a>
                            <form asp-action="EliminarProducto" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@producto.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este producto?');">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay productos registrados.</p>
    }
</div>

<div class="product-list">
    <h2>Lista de Productos</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio.ToString("C")</td> <!-- Formato de moneda -->
                    <td>@(producto.Stock > 0 ? "Disponible" : "Agotado")</td> <!-- Indicador de stock -->
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Productos.Any())
    {
        <p>No tienes productos registrados.</p>
    }
</div>