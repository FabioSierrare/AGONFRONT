@model AGONFRONT.Models.Categoria
@{
    ViewBag.Title = "Editar Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Editar Categoría</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@using (Html.BeginForm("EditarCategoria", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <button type="submit" class="btn btn-success">Guardar cambios</button>
            @Html.ActionLink("Cancelar", "Categorias", "Admin", null, new { @class = "btn btn-default ml-2" })
        </div>
    </div>
}
