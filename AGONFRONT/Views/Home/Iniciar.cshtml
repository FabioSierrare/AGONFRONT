@model AGONFRONT.Models.Login
@{
    ViewBag.Title = "Iniciar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main>
    <section>
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="@(Url.Content("~/Content/img/LoginImg.jpg"))"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))

                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <a class="navbar-brand d-flex align-items-center" href="#">
                                                <img src="@(Url.Content("~/Content/img/logo2.svg"))" alt="Logo" width="80" height="80">
                                                <span class="txtlogo" style="font-size: 20px;">AGON</span>
                                            </a>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicia sesión en tu cuenta</h5>

                                        <div class="form-outline mb-4">
                                            @Html.LabelFor(m => m.Correo, new { @class = "form-label" })
                                            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control form-control-lg" })
                                            @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-outline mb-4">
                                            @Html.LabelFor(m => m.Contraseña, new { @class = "form-label" })
                                            @Html.PasswordFor(m => m.Contraseña, new { @class = "form-control form-control-lg" })
                                            @Html.ValidationMessageFor(m => m.Contraseña, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button type="submit" class="btn btn-dark btn-lg btn-block" style="background: #157347;">Entrar</button>
                                        </div>

                                        <a class="small text-muted" asp-page="/RecuperarContraseña">¿Olvidaste tu contraseña?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            ¿No tienes una cuenta?
                                            <a class="item">@Html.ActionLink("Registro", "Register", "Usuarios")</a>
                                        </p>
                                        <a href="#!" class="small text-muted">Términos de uso.</a>
                                        <a href="#!" class="small text-muted">Política de privacidad</a>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

    </section>
</main>