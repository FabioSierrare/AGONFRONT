@{
    ViewBag.Title = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/Content/css/pagina 1.css" asp-append-version="true">
</head>


<main>
    <section>
        <div class="container text-center my-5">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <h1 class="logo-container">AGON</h1>
                    <p class="lead">Agronomía Online</p>
