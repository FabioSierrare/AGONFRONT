                    <!-- Agregar opción de continuar sin iniciar sesión -->
                    <p class="mt-3">
                        <a href="@Url.Content("~/Login/pagina17")" class="text-muted">Continuar sin iniciar sesión</a>
                    </p>
                </div>
                <div class="col-md-6">
                    <img src="@Url.Content("~/Content/img/Agricultor.jpg")" alt="Icono de Agricultor" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </section>

</main>