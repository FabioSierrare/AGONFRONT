@model List<AGONFRONT.Models.Productos>
@{
    ViewBag.Title = "Frutas";
    Layout = "~/Views/Shared/_LayoutLoged.cshtml";
}
<head>
    <style>
        <style >
        /* Secciones de contenido */
        .section-title {
            font-family: 'Merriweather', serif;
            font-weight: 700;
            color: var(--primary-dark);
            position: relative;
            margin-bottom: 3rem;
            text-align: center;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: var(--primary);
        }

        /* Tarjetas de productos */
        .product-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
            }

        .product-img {
            height: 200px;
            object-fit: cover;
            transition: var(--transition);
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .product-body {
            padding: 1.5rem;
        }

        .product-title {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .product-price {
            font-weight: 700;
            color: var(--primary);
            font-size: 1.2rem;
        }

        .product-btn {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            padding: 0.5rem 1rem;
            font-weight: 600;
            border-radius: 8px;
            color: white;
            box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
            transition: var(--transition);
            width: 100%;
            margin-top: 1rem;
        }

            .product-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(39, 174, 96, 0.4);
                color: white;
            }

        /* Categorías */
        .category-btn {
            border: none;
            padding: 1.5rem 0;
            font-weight: 600;
            border-radius: 12px;
            color: white;
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

            .category-btn i {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

            .category-btn:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-md);
            }
    </style>
</head>
<link rel="stylesheet" href="~/Content/css/Productos.css">
<h2>Verduras</h2>

<div class="container my-5">
    <h2 class="text-center mb-4">Verduras</h2>

    <div class="row">
        @foreach (var producto in Model.Where(p => p.CategoriaId == 1)) // Filtrado en la vista
        {
            <div class="col-md-3 mb-4 productoRow" data-categoria="@producto.CategoriaId">
                <div class="product-card">
                    <img src="@producto.UrlImagen" class="product-img card-img-top" alt="@producto.Nombre">
                    <div class="product-body card-body">
                        <h5 class="product-title">@producto.Nombre</h5>
                        <p class="product-price">$@producto.Precio</p>
                        <p class="card-text">@producto.Descripcion</p>
                        <a href="@Url.Action("Detalles", "Productos", new { id = producto.Id })" class="product-btn btn">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>