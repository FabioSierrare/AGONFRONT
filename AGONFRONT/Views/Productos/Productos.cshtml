@model List<AGONFRONT.Models.Productos>
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutLoged.cshtml";
}

<link rel="stylesheet" href="~/Content/css/Productos.css">
<div class="container-fluid body-content">
    <!-- Carrusel -->
    <div id="promocionesCarrusel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/img/carusel2.jpg" class="d-block w-100" alt="Promoción 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Gran Oferta en productos agrícolas</h5>
                    <p>Aprovecha las mejores promociones en frutas y cereales.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/img/carusel3.jpg" class="d-block w-100" alt="Promoción 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Descuentos en Ropa de Invierno</h5>
                    <p>Compra ahora y recibe hasta un 50% de descuento en ropa de invierno.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/img/carusel4.jpg" class="d-block w-100" alt="Promoción 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Ofertas de Hogar</h5>
                    <p>Encuentra lo que necesitas para tu casa a precios increíbles.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

<!-- Productos -->
<div class="container my-5">
    <h2 class="text-center mb-4">Productos Destacados</h2>
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@producto.UrlImagen" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@producto.Nombre</h5>
                        <p class="card-text">@producto.Descripcion</p>
                        <p class="card-text fw-bold">$@producto.Precio</p>
                        <p class="card-text">Stock: @producto.Stock</p>
                        <a href="@Url.Action("Detalles", "Productos", new { id = producto.Id })" class="btn btn-primary mt-auto">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Categorías -->
<div class="container my-5">
    <h2 class="text-center mb-4">Categorías de Productos</h2>
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <a href="#" class="btn btn-outline-primary w-100">Frutas</a>
        </div>
        <div class="col-md-3 mb-4">
            <a href="#" class="btn btn-outline-secondary w-100">Verduras</a>
        </div>
        <div class="col-md-3 mb-4">
            <a href="#" class="btn btn-outline-success w-100">Tubérculos</a>
        </div>
        <div class="col-md-3 mb-4">
            <a href="#" class="btn btn-outline-danger w-100">Cereales</a>
        </div>
    </div>
</div>
