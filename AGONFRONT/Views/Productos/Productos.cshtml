@model List<AGONFRONT.Models.Productos>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutLoged.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/css/pagina 17.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Content/css/pagina 3.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
    </head>
<div class="container">

    <div id="promocionesCarrusel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/Content/img/carusel2.jpg")" class="d-block w-100" alt="Promoción 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Gran Oferta en productos agrícolas</h5>
                    <p>Aprovecha las mejores promociones en frutas y cereales.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Content/img/carusel3.jpg")" class="d-block w-100" alt="Promoción 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Descuentos en Ropa de Invierno</h5>
                    <p>Compra ahora y recibe hasta un 50% de descuento en ropa de invierno.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Content/img/carusel4.jpg")" class="d-block w-100" alt="Promoción 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>¡No Te Pierdas nuestras Ofertas de Hogar!</h5>
                    <p>Encuentra todo lo que necesitas para tu casa a precios increíbles.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Agregar estilos CSS -->
    <style>
        /* Asegura que el carrusel ocupe toda la pantalla */
        #promocionesCarrusel {
            width: 100%; /* Establece el ancho al 100% de la pantalla */
            height: 100vh; /* Asegura que el carrusel ocupe toda la altura de la ventana */
        }

            #promocionesCarrusel .carousel-inner {
                height: 100%; /* Asegura que las imágenes ocupen todo el alto del carrusel */
            }

            #promocionesCarrusel .carousel-item img {
                object-fit: cover; /* Las imágenes se ajustan para cubrir todo el contenedor sin perder proporción */
                width: 100%; /* Asegura que las imágenes ocupen todo el ancho del carrusel */
                height: 100%; /* Asegura que las imágenes ocupen toda la altura disponible */
            }

        .carousel-caption {
            bottom: 20px; /* Mueve el texto ligeramente hacia arriba */
        }
    </style>




    <div class="row mt-4">
        <h2 class="text-center">Productos en Oferta</h2>
        <div class="col-md-4">
            <div class="card">
                <img src="@Url.Content("~/Content/img/aguacate.jpg")" class="card-img-top" alt="Aguacate">
                <div class="card-body">
                    <h5 class="card-title">Aguacate</h5>
                    <p class="card-text">Precio: $5,000</p>
                    <a href="#" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="@Url.Content("~/Content/img/banano.jpg")" class="card-img-top" alt="Banano">
                <div class="card-body">
                    <h5 class="card-title">Banano</h5>
                    <p class="card-text">Precio: $4,000</p>
                    <a href="#" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="@Url.Content("~/Content/img/mango.jpg")" class="card-img-top" alt="Mango">
                <div class="card-body">
                    <h5 class="card-title">Mango</h5>
                    <p class="card-text">Precio: $3,500</p>
                    <a href="#" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>

    </div>

    <div class="mt-4 text-center">
        <h2>Categorías</h2>
        <div class="d-flex justify-content-center flex-wrap">
            <a href="@Url.Action("Categoria", "Productos", new { id = 1 })" class="btn btn-success m-2">Frutas</a>
            <a href="@Url.Action("Categoria", "Productos", new { id = 2 })" class="btn btn-success m-2">Verduras</a>
            <a href="@Url.Action("Categoria", "Productos", new { id = 3 })" class="btn btn-success m-2">Lácteos</a>
            <a href="@Url.Action("Categoria", "Productos", new { id = 4 })" class="btn btn-success m-2">Granos</a>
        </div>
    </div>
</div>



@{
    ViewData["Title"] = "Lista de Productos";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Fecha de Creación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Stock</td>
                    <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron productos disponibles.</p>
}


