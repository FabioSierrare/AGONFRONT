@model List<AGONFRONT.Models.Productos>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutLoged.cshtml";
}

@* Bootstrap and Bootstrap Icons *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<body>
    <!-- Carrusel de imágenes (Promociones y Anuncios) -->
    <div id="promocionesCarrusel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/content/img/carusel2.jpg")" class="d-block w-100" alt="Promoción 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Gran Oferta en productos agrícolas</h5>
                    <p>Aprovecha las mejores promociones en frutas y cereales.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/content/img/carusel3.jpg")" class="d-block w-100" alt="Promoción 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Descuentos en Ropa de Invierno</h5>
                    <p>Compra ahora y recibe hasta un 50% de descuento en ropa de invierno.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/content/img/carusel4.jpg")" class="d-block w-100" alt="Promoción 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>¡No Te Pierdas nuestras Ofertas de Hogar!</h5>
                    <p>Encuentra todo lo que necesitas para tu casa a precios increíbles.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!-- Apartado de Categorías -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Categorías de Productos</h2>
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Frutas", "Productos", new { id = 1 })" class="btn btn-outline-primary w-100">
                    Frutas
                </a>
            </div>
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Verduras", "Productos", new { id = 2 })" class="btn btn-outline-secondary w-100">
                    Verduras
                </a>
            </div>
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Tuberculos", "Productos", new { id = 3 })" class="btn btn-outline-success w-100">
                    Tubérculos
                </a>
            </div>
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Cereales", "Productos", new { id = 4 })" class="btn btn-outline-danger w-100">
                    Cereales
                </a>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white py-2">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="https://facebook.com" class="text-white me-3" target="_blank">
                        <i class="bi bi-facebook" style="font-size: 2rem;"></i>
                    </a>
                    <a href="https://instagram.com" class="text-white me-3" target="_blank">
                        <i class="bi bi-instagram" style="font-size: 2rem;"></i>
                    </a>
                    <a href="https://twitter.com" class="text-white me-3" target="_blank">
                        <i class="bi bi-twitter" style="font-size: 2rem;"></i>
                    </a>
                </div>
                <div class="d-flex align-items-center text-muted">
                    <i class="bi bi-question-circle" style="font-size: 1.5rem; margin-right: 8px; color: #fff;"></i>
                    <span style="color: #fff;">¿Necesitas ayuda?</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

