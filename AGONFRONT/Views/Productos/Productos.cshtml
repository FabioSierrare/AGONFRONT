@model List<AGONFRONT.Models.Productos>
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutLoged.cshtml";
}

<head>
    <style>
        /* Carrusel mejorado */
        .carousel {
            margin-top: 76px; /* Para evitar que el navbar cubra el carrusel */
            box-shadow: var(--shadow-md);
        }

        .carousel-item {
            height: 500px;
        }

            .carousel-item img {
                object-fit: cover;
                height: 100%;
                filter: brightness(0.8);
            }

        .carousel-caption {
            bottom: 30%;
            text-align: left;
            left: 10%;
            right: 50%;
        }

            .carousel-caption h5 {
                font-size: 2.5rem;
                font-weight: 700;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 1.5rem;
            }

            .carousel-caption p {
                font-size: 1.2rem;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            }

        /* Secciones de contenido */
        .section-title {
            font-family: 'Merriweather', serif;
            font-weight: 700;
            color: var(--primary-dark);
            position: relative;
            margin-bottom: 3rem;
            text-align: center;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: var(--primary);
            }

        /* Tarjetas de productos */
        .product-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
            }

        .product-img {
            height: 200px;
            object-fit: cover;
            transition: var(--transition);
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .product-body {
            padding: 1.5rem;
        }

        .product-title {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .product-price {
            font-weight: 700;
            color: var(--primary);
            font-size: 1.2rem;
        }

        .product-btn {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            padding: 0.5rem 1rem;
            font-weight: 600;
            border-radius: 8px;
            color: white;
            box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
            transition: var(--transition);
            width: 100%;
            margin-top: 1rem;
        }

            .product-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(39, 174, 96, 0.4);
                color: white;
            }

        /* Categorías */
        .category-btn {
            border: none;
            padding: 1.5rem 0;
            font-weight: 600;
            border-radius: 12px;
            color: white;
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

            .category-btn i {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

            .category-btn:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-md);
            }
    </style>

</head>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div id="promocionesCarrusel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/img/carusel2.jpg" class="d-block w-100" alt="Promoción 1">
            <div class="carousel-caption">
                <h5>Gran Oferta en productos agrícolas</h5>
                <p>Aprovecha las mejores promociones en frutas y cereales.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/img/carusel3.jpg" class="d-block w-100" alt="Promoción 2">
            <div class="carousel-caption">
                <h5>Descuentos en productos frescos</h5>
                <p>Compra ahora y recibe hasta un 30% de descuento en productos seleccionados.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/img/carusel4.jpg" class="d-block w-100" alt="Promoción 3">
            <div class="carousel-caption">
                <h5>¡No Te Pierdas nuestras Ofertas!</h5>
                <p>Encuentra todo lo que necesitas a precios increíbles.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#promocionesCarrusel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- Categorías -->
<div class="container my-5 animate__animated animate__fadeIn">
    <h2 class="section-title">Explora Nuestras Categorías</h2>
    <div class="row">
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Frutas", "Productos")" class="category-btn" style="background: linear-gradient(135deg, #FF9A8B, #FF6B95);">
                <i class="bi bi-apple"></i>
                Frutas Frescas
            </a>
        </div>
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Verduras", "Productos")" class="category-btn" style="background: linear-gradient(135deg, #4FACFE, #00F2FE);">
                <i class="fas fa-carrot"></i>
                Verduras Orgánicas
            </a>
        </div>
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Granja", "Productos")" class="category-btn" style="background: linear-gradient(135deg, #A6C0FE, #F68084);">
                <i class="bi bi-flower2"></i>
                Granja
            </a>
        </div>
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Cereales", "Productos")" class="category-btn" style="background: linear-gradient(135deg, #38F9D7, #43E97B);">
                <i class="bi bi-egg"></i>
                Cereales Integrales
            </a>
        </div>
    </div>
</div>

<!-- Productos -->
<div class="container my-5">
    <h2 class="section-title">Productos Destacados</h2>
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="product-card">
                    <img src="@producto.UrlImagen" class="product-img card-img-top" alt="@producto.Nombre">
                    <div class="product-body card-body">
                        <h5 class="product-title">@producto.Nombre</h5>
                        <p class="product-price">$@producto.Precio</p>
                        <p class="card-text">@producto.Descripcion</p>
                        <a href="@Url.Action("Detalles", "Productos", new { id = producto.Id })" class="product-btn btn">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


