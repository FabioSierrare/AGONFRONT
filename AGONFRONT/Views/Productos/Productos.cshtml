@model List<AGONFRONT.Models.Productos>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>
                    <img src="@producto.UrlImagen" alt="@producto.Nombre" width="50" />
                </td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Detalles", "Productos", new { id = producto.Id })" class="btn btn-primary">Ver detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
