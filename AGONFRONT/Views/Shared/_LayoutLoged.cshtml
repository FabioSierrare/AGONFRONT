<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AGON</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="~/Content/css/whatsapp.css">
    
    
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --primary: #27AE60;
            --primary-dark: #219653;
            --primary-light: #6FCF97;
            --secondary: #2D9CDB;
            --accent: #F2C94C;
            --dark: #333333;
            --light: #F8F9FA;
            --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            --shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 10px 20px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 15px 30px rgba(0, 0, 0, 0.15);
        }


        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4f0f8 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: var(--dark);
        }

        /* Navbar futurista */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: var(--shadow-sm);
            padding: 1rem 2rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            background: linear-gradient(to right, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            transition: var(--transition);
            display: flex;
            align-items: center;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

            .navbar-brand img {
                margin-right: 10px;
                width: 40px;
            }

        .nav-link {
            font-weight: 500;
            color: var(--dark) !important;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: var(--transition);
            position: relative;
        }

            .nav-link:hover {
                color: var(--primary) !important;
                transform: translateY(-2px);
            }

            .nav-link.active {
                color: var(--primary) !important;
                background: rgba(39, 174, 96, 0.1);
            }

            .nav-link::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 2px;
                background: var(--primary);
                transition: var(--transition);
            }

            .nav-link:hover::before {
                width: 80%;
            }



        /* Footer */
        .agro-footer {
            background: white;
            padding: 1.5rem 0;
            box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.03);
            margin-top: 3rem;
            position: static;
        }

        .social-links {
            display: flex;
            justify-content: center;
        }

        .social-link {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--light);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 0.5rem;
            color: var(--dark);
            transition: var(--transition);
            box-shadow: var(--shadow-sm);
        }

            .social-link:hover {
                transform: translateY(-5px) scale(1.1);
                color: white;
            }

            .social-link.facebook:hover {
                background: #3b5998;
            }

            .social-link.instagram:hover {
                background: linear-gradient(45deg, #405DE6, #5851DB, #833AB4, #C13584, #E1306C, #FD1D1D);
            }

            .social-link.twitter:hover {
                background: #1DA1F2;
            }

        .footer-help {
            display: inline-flex;
            align-items: center;
            color: var(--dark);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

            .footer-help:hover {
                color: var(--primary);
            }

        .help-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: var(--light);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            transition: var(--transition);
        }

        .footer-help:hover .help-icon {
            background: var(--primary);
            color: white;
            transform: rotate(15deg);
        }

        .copyright {
            color: #777;
            font-size: 0.9rem;
            text-align: center;
            margin-top: 1rem;
        }


        /* Decoración agrícola */
        .agro-decoration {
            position: absolute;
            z-index: -1;
            opacity: 0.1;
            font-size: 8rem;
            color: var(--primary);
        }

        .decoration-1 {
            top: 10%;
            left: 5%;
            transform: rotate(-15deg);
        }

        .decoration-2 {
            bottom: 10%;
            right: 5%;
            transform: rotate(25deg);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .carousel-caption {
                bottom: 20%;
                right: 10%;
            }

                .carousel-caption h5 {
                    font-size: 2rem;
                }
        }

        @@media (max-width: 768px) {
            .carousel-item {
                height: 400px;
            }

            .carousel-caption {
                bottom: 10%;
                right: 10%;
            }

                .carousel-caption h5 {
                    font-size: 1.5rem;
                }

                .carousel-caption p {
                    font-size: 1rem;
                }

            .product-card {
                margin-bottom: 1.5rem;
            }
        }

        @@media (max-width: 576px) {
            .carousel-item {
                height: 300px;
            }

            .carousel-caption {
                bottom: 5%;
                right: 5%;
                left: 5%;
            }

                .carousel-caption h5 {
                    font-size: 1.2rem;
                    margin-bottom: 0.5rem;
                }
        }
    </style>
</head>

<body>
    <!-- Botón WhatsApp flotante -->
    <a href="https://api.whatsapp.com/send?phone=5195508107&text=Hola%21%20Quisiera%20m%C3%A1s%20informaci%C3%B3n%20sobre%20Varela%202." class="float" target="_blank">
        <i class="fab fa-whatsapp my-float"></i>
    </a>
    <i class="bi bi-tree-fill agro-decoration decoration-1"></i>
    <i class="bi bi-flower1 agro-decoration decoration-2"></i>

    <!-- Navbar -->
    @{
        var isAuthenticated = Request.Cookies["BearerToken"] != null;
    }
    <nav class="navbar navbar-expand-lg" style="z-index: 1050;">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Productos", "Productos")">
                <img src="~/Content/img/logo2.svg" alt="AGON+ Logo">
                AGON+
            </a>
            @if (isAuthenticated)
            {
                <div class="flex-grow-1 mx-3">
                    <form class="d-flex w-100" role="search" action="/Busquedas/Busquedas" method="get">
                        <input class="form-control me-2 nce" type="search" placeholder="Buscar productos" aria-label="Search" name="busqueda">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Productos", "Productos")"><i class="bi bi-house-door me-1"></i> Inicio</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-grid me-1"></i> Categorías
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.Action("Categorias", "Productos")
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Ofertas", "Ofertas")"><i class="bi bi-percent me-1"></i> Ofertas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Carrito", "Carrito")">
                                <i class="bi bi-cart4 me-1"></i> Carrito
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> Perfil
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("EditarPerfilCliente","Cliente")"><i class="bi bi-person me-2"></i> Ver Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="@Url.Action("LogOff", "Home")" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="nav-link btn btn-link text-danger" style="text-decoration: none;">
                                            <i class="bi bi-box-arrow-right"></i>
                                            <span>Cerrar sesión</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <form class="d-flex w-100" role="search" action="/Busquedas/Busquedas" method="get">
                        <input class="form-control me-2 nce" type="search" placeholder="Buscar productos" aria-label="Search" name="busqueda">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link d-inline-flex" href="/"><i class="bi bi-house-door me-1"></i> Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-inline-flex" href="@Url.Action("Productos", "Productos")"><i class="bi bi-basket me-1"></i> Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-inline-flex" href="@Url.Action("Register", "Usuarios")"><i class="bi bi-person-plus me-1"></i> Registro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-inline-flex" href="@Url.Action("Iniciar", "")"><i class="bi bi-box-arrow-in-right me-1"></i> Acceder</a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container-fluid body-content mt-5 pt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="agro-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <div class="social-links">
                        <a href="https://facebook.com" class="social-link facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://instagram.com" class="social-link instagram"><i class="bi bi-instagram"></i></a>
                        <a href="https://twitter.com" class="social-link twitter"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="@Url.Action("RespuestasFAQ", "Cliente")" class="footer-help">
                        <span class="help-icon"><i class="bi bi-question-lg"></i></span>
                        <span>Centro de ayuda</span>
                    </a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <p class="copyright mb-0">
                        &copy; 2023 AGRO+ Plataforma Agrícola. Todos los derechos reservados.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="@Url.Content("~/Content/JS/Validaciones.js")"></script>
    
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
