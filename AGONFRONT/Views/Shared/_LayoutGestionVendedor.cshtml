@* ====== _LayoutGestionVendedor.cshtml (CORREGIDO) ====== *@
@{
    ViewBag.Title = ViewBag.Title ?? "AGON | Panel de Vendedor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap + Icons + Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- WhatsApp Floating Button -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/css/whatsapp.css" />

    <!-- Estilo general moderno -->
    <link rel="stylesheet" href="~/Content/css/PerfilVendedor.css" />

    @RenderSection("Styles", required: false)
</head>
<body style="display: flex;">
    <!-- Botón WhatsApp flotante -->
    <a href="https://api.whatsapp.com/send?phone=5195508107" class="float" target="_blank">
        <i class="fa fa-whatsapp my-float"></i>
    </a>

    <!-- Sidebar moderno -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <a href="#" class="sidebar-brand">
                <img src="~/Content/img/logo2.svg" alt="AGON Logo">
                AGON
            </a>
        </div>
        <nav class="sidebar-nav">
            <ul class="nav flex-column">
                <li class="nav-item">@Html.ActionLink("Dashboard", "Dashboard", "Usuarios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Gestión de Productos", "GestionarProductos", "Usuarios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Mis Productos", "Misproductosvendedor", "Usuarios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Gestion de Descuentos", "GestionDescuentos", "Usuarios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Envíos", "GestionEnvios", "Envios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Mi Perfil", "UpdatePerfilVendedor", "Usuarios", null, new { @class = "nav-link active" })</li>
            </ul>
        </nav>
    </aside>

    <!-- Contenido principal -->
    <main class="main-content" id="main-content">
        @RenderBody()
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.querySelector('.sidebar');
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', function () {
                    sidebar.classList.toggle('active');
                });
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>