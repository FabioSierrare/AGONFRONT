﻿@{
    ViewBag.Title = "Gestión de Pedidos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="../CSS/GestionProductos.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../CSS/MisProductos.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .navbar {
            background-color: #2c3e50 !important;
            width: 100%;
        }

            .navbar .nav-link, .navbar .navbar-brand {
                color: white !important;
            }
    </style>
    <link rel="stylesheet" href="~/Content/css/whatsapp.css">
</head>
<body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <a href="https://api.whatsapp.com/send?phone=3026657941&text=Nuestro%20equipo%20est%C3%A1%20listo%20para%20responder%20tus%20dudas%20y%20brindarte%20la%20mejor%20atenci%C3%B3n." class="float" target="_blank">
        <i class="fab fa-whatsapp my-float"></i>
    </a>
    <div class="container-fluid p-0">
        <!-- Barra lateral de navegación -->
        <header class="navbar">
            <div class="navbar-container">
                <div class="logo">
                    <h1>E-Agricultura</h1>
                </div>
                <nav>
                    <ul class="nav-links">
                        <li>@Html.ActionLink("Dashboard", "Dashboard", "Usuarios")</li>
                        <li>@Html.ActionLink("GestionProductos", "GestionarProductos", "Usuarios")</li>
                        <li>@Html.ActionLink("Mis Productos", "Misproductosvendedor", "Usuarios")</li>
                        <li>@Html.ActionLink("Estadísticas de Ventas", "EstadisticasVentas", "EstadisticasVentas")</li>
                        <li>@Html.ActionLink("Gestión de Pedidos", "GestionPedidos", "Usuarios")</li>
                        <li>@Html.ActionLink("Promociones y Descuentos", "GestionDescuentos", "Usuarios")</li>
                        <li>@Html.ActionLink("Gestión de Envíos", "GestionEnvios", "Envios")</li>
                        <li>@Html.ActionLink("Perfil de Vendedor", "UpdatePerfilVendedor", "Usuarios")</li>
                    </ul>
                </nav>
                <div class="notifications">
                    <span class="notification-icon">&#128276;</span> <!-- Icono de notificación -->
                    <div class="notification-count">3</div> <!-- Contador de notificaciones -->
                </div>
            </div>
        </header>

        <!-- Contenido principal -->
        <main class="main-content" id="main-content">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)


</body>
</html>