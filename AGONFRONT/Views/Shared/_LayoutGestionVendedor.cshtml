@{
    ViewBag.Title = ViewBag.Title ?? "AGON | Panel de Vendedor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap + Icons + Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- WhatsApp Floating Button -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/css/whatsapp.css" />

    <!-- Estilo general moderno -->
    <link rel="stylesheet" href="~/Content/css/NavVendedor.css" />

    @RenderSection("Styles", required: false)

    <style>
        @Html.Raw(@"
            @media (max-width: 992px) {
                .main-content {
                    margin-left: 0;
                    width: 100%;
                }

                .sidebar {
                    left: -250px;
                }

                .sidebar.active {
                    left: 0;
                }
            }
        ")
    </style>
</head>

<body style="display: flex; overflow-x: hidden;">
    <!-- Botón WhatsApp flotante -->
    <a href="https://api.whatsapp.com/send?phone=5195508107" class="float" target="_blank">
        <i class="fa fa-whatsapp my-float"></i>
    </a>

    <!-- Sidebar Navigation -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <a href="#" class="sidebar-brand">
                <img src="~/Content/img/logo2.svg" alt="AGON Logo">
                AGON
            </a>
        </div>

        <nav class="sidebar-nav">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Dashboard", "Usuarios")" class="nav-link">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("GestionarProductos", "Usuarios")" class="nav-link">
                        <i class="bi bi-box-seam"></i>
                        <span>Gestión de Productos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Misproductosvendedor", "Usuarios")" class="nav-link">
                        <i class="bi bi-basket"></i>
                        <span>Mis Productos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("EstadisticasVentas", "EstadisticasVentas")" class="nav-link">
                        <i class="bi bi-graph-up"></i>
                        <span>Estadísticas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("GestionPedidos", "Usuarios")" class="nav-link">
                        <i class="bi bi-receipt"></i>
                        <span>Pedidos</span>
                        <span class="notification-badge">3</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("GestionDescuentos", "Usuarios")" class="nav-link">
                        <i class="bi bi-percent"></i>
                        <span>Promociones</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("GestionEnvios", "Envios")" class="nav-link">
                        <i class="bi bi-truck"></i>
                        <span>Envíos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("UpdatePerfilVendedor", "Usuarios")" class="nav-link active">
                        <i class="bi bi-person-circle"></i>
                        <span>Mi Perfil</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Contenido principal -->
    <main class="main-content" id="main-content">
        @RenderBody()
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.querySelector('.sidebar');
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', function () {
                    sidebar.classList.toggle('active');
                });
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
